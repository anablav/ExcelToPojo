<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<workbook>
    <worksheet idx="0">
        <section startRow="0" endRow="0" />
        <loop startRow="1" endRow="1" items="employeeList" var="employee" varType="com.example.exceltopojo.model.Employee">
            <section startRow="1" endRow="1">
                <mapping row="1"  col="0">employee.name</mapping>
                <mapping row="1"  col="1">employee.age</mapping>
                <mapping row="1"  col="2">employee.address.streetname</mapping>
            </section>
            <loopbreakcondition>
                <rowcheck offset="0">
                    <cellcheck offset="0"></cellcheck>
                </rowcheck>
            </loopbreakcondition>
        </loop>
    </worksheet>
</workbook>